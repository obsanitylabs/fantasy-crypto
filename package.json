{
  "name": "fantasy-crypto",
  "version": "1.0.0",
  "description": "Fantasy Football meets Crypto Trading - A DeFi trading competition platform built on Arbitrum",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
