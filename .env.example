# Environment Variables for Fantasy Crypto

# Copy this file to .env.local for development
# or configure these as environment variables in your deployment platform

# =============================================================================
# REQUIRED FOR PRODUCTION DEPLOYMENT
# =============================================================================

# Reown (WalletConnect) Project ID
# Get from: https://cloud.reown.com
NEXT_PUBLIC_REOWN_PROJECT_ID=your-reown-project-id-here

# =============================================================================
# DEMO MODE (for static deployments without backend)
# =============================================================================

# Set to 'true' to use mock data instead of real API calls
# Useful for Netlify/Vercel deployments without backend
NEXT_PUBLIC_DEMO_MODE=false

# =============================================================================
# BACKEND CONFIGURATION (if deploying full stack)
# =============================================================================

# Database Connection
DATABASE_URL=postgresql://username:password@localhost:5432/fantasy_crypto

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-make-it-long-and-secure

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# EXTERNAL API KEYS (optional - will use mock data if not provided)
# =============================================================================

# Cryptocurrency data APIs
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Pear Protocol API (for trading execution)
PEAR_PROTOCOL_API_URL=https://api.pearprotocol.io
PEAR_PROTOCOL_API_KEY=contact-pear-for-access

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Arbitrum Network
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
CHAIN_ID=42161

# Private key for contract deployment (keep secure!)
PRIVATE_KEY=your-private-key-for-deployment

# Deployed contract addresses (fill after deployment)
FANTASY_CRYPTO_CONTRACT=
UNITE_TOKEN_CONTRACT=

# Arbiscan API key for contract verification
ARBISCAN_API_KEY=your-arbiscan-api-key

# =============================================================================
# PLATFORM SETTINGS
# =============================================================================

# Fee percentages (as decimals)
PLATFORM_FEE=0.10
INSURANCE_FEE=0.05
UNITE_DISTRIBUTION_FEE=0.05
ESCROW_PERCENTAGE=0.10

# Development settings
NODE_ENV=development
PORT=3001